

<h2>도록의 작품 관리</h2>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="wrapper wrapper-content">
		<div class="row">  
    		<div class="col-lg-12 col-md-12">
      			<div class="ibox">
			        <div class="ibox-title">
			          <h5><span class="bg-primary p-w-xs b-r-sm m-r-xs">1</span>작품 정보 입력</h5>
			            <div class="ibox-tools">
			              <a class="collapse-link">
			                <i class="fa fa-chevron-up"></i>
			              </a>
			            </div>
			        </div>
			        <div class="ibox-content">
			        	<h2>작품 정보 입력하기</h2>
						<%if @parent_object.present?%>
						    <%= render partial: "form_upload_Catalogue"%>
						<% else %>
						    <%= render partial: "form_upload"%>
						<% end %>
						
						<% if @artworks.empty? %> <h2>Artwork 없음</h2> <%end%>
					  
				
						<%=link_to '추가', {action: :add_form}, remote: true, 'data-no-turbolink': 'true'%>
				
						<div id="add_form"></div>
				
				  		<div class="form_artworks"></div>
				
						<% @artworks.each do |artwork|%>
						      <%= render 'layouts/error_messages', object: artwork %>  
						      
						      <div class="panel panel-danger">
						        <%= link_to "Remove", artwork, method: :delete, data: { confirm: "이 Artwork를 삭제하시겠습니까?" } %>
									
							      <%= render partial: "form", :locals => { artwork: artwork }%>
						      </div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>  
<%#= link_to "New artwork", new_@parent_object.class.name.to_s.downcase_artworks_path(@parent_object.id)%>
