
  <%= form_for [parent_object, artwork], html: {class: "artwork_group_form", enctype: "multipart/form-data"} do |f| %>


      <%= render 'layouts/error_messages', object: f.object %>


        <% if artwork.image.present? %>
          <%= link_to '이미지 제거/복구', '#', class: 'toggle_remove_image btn btn-primary'%>
          <%= f.hidden_field :remove_image, value: false%>
        <% end %>
        <div class="row m-b">
          <%= f.hidden_field :image_cache %>
          <%= f.file_field :image, label: false, accept: 'image/*', name: "artwork[image]", class: 'image_edit'%>
      
          <div class="image-edit-preview">
            <div id="image-preview">
              <%= image_tag artwork.image.url(:thumb) %><br/>
            </div>
          </div>
            <style>
          		.image-edit-preview img{
          			width: 100px;
          		}
        	  </style>
        </div>        
    
      <!--<div class="row">-->
        <div class="row m-b">
          <%= f.label :category, "분류", class: "m-l-lg col-lg-2 col-md-2 control-label" %><br>
          <div class="col-lg-8 col-md-8">
            <%= f.text_field :category, placeholder: "작품 분류", class: "form-control" %>
          </div>
        </div>
        

      
         <script id="edit-upload" type="text/x-tmpl">
        //   <div class="upload">
        //     <div class="progress" style="width: 400px; height: 30px; border: 1px solid black;">
        //       <div class="bar" style="width: 0%; height: 25px; background-color: green;" ></div>
        //     </div>
        //     {%=o.name%}
        //   </div>
         </script>
      
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_area :title %>
        </div>
        <div class="field">
          <%= f.label :size %><br>
          <%= f.text_field :size, as: :array %>
        </div>
        <div class="field">
          <%= f.label :unit %><br>
          <%= f.text_area :unit %>
        </div>
        <div class="field">
          <%= f.label :material %><br>
          <%= f.text_area :material %>
        </div>
        <div class="field">
          <%= f.label :created_date %><br>
          <%= f.date_select :created_date, start_year: 1800, end_year: Date.current.year, discard_month: true, discard_day: true, include_blank: true %>
        </div>
      <!--</div>-->


      <div class="row p-w-md">
          <div class="form-actions">
            <br><br><%= f.submit "생성/등록", class: 'btn btn-primary' %>
          </div>
      </div>
  <% end %>
