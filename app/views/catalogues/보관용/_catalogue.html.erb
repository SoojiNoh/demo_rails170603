<%= form_for(@catalogue) do |f| %>

  <%= render 'layouts/error_messages', object: f.object %>  


  <div class="field" col="3">
    <%= f.label :title, "도록 제목" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "도록 설명" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
