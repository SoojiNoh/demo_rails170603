<tr>
    <%= f.input_field :category, as: :hidden, value: 'academic'%>
    <td>
        <%= f.input_field :_destroy, as: :hidden %>
        <%= link_to 'Delete', '#', class: 'remove_record'%>
    </td>
    <td>
        <% puts "title.end_date? : #{f.object.title}.#{f.object.end_date}" %>
        <%= f.input :start_date, label: false %>~
        <% if f.object.end_date? %>
            <%= f.input :end_date, label: false %>
        <% else %>
            <%= f.input :end_date, as: :hidden %>
        <% end %>
        <%= link_to 'toggle_end_date', '#', class: 'toggle_hidden_fields'%>
        
    </td>
    <td><%= f.input :title, label: false %></td>
    <td><%= f.input :detail, label: false %></td>
    <td><%= f.input :status, label: false %></td>
</tr>